<% newMessage.forEach(function(message){ %>
    <% if(message.messageType==="text" ){ %>
        <div class="bubble <% if(message.senderId == user._id){ %> 
            me <% }else { %> you <% } %>" data-mess-id="<%= message._id %>">
            <img src="/images/users/<%= message.sender.avatar %>" class="avatar-small"
                title="<%= message.sender.username %>">
            <%= message.text %>
        </div>
        <% } %>

            <% if(message.messageType==="image" ){ %>
                <div class="bubble <% if(message.senderId == user._id){ %> 
                    me <% }else { %> you <% } %> bubble-image-file" data-mess-id="<%= message._id %>">
                    <img src="/images/users/<%= message.sender.avatar %>" class="avatar-small"
                        title="<%= message.sender.username %>">
                    <img src="data:<%= message.contentType %>; base64, <%= bufferToBase64(message.file.data) %>"
                        class="show-image-chat">
                </div>
                <% } %>

                    <% if(message.messageType==="file" ){ %>
                        <div class="bubble <% if(message.senderId == user._id){ %> 
                            me <% }else { %> you <% } %> 
                            bubble-attachment-file" data-mess-id="${item._id}">
                            <a href="data:<%= message.contentType %>; base64, <%= bufferToBase64(message.file.data) %>"
                                download="<%= message.file.fileName %>">
                                <img src="/images/users/<%= message.sender.avatar %>" class="avatar-small"
                                    title="<%= message.sender.username %>">
                                <%= message.file.fileName %>
                            </a>
                        </div>
                        <% } %>
                            <% }) %>